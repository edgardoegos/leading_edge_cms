<%= form_for(resource, :html => {:id => "frm_login", :class => "animated fadeIn"}, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
          <div class="col-md-5 col-sm-5">
              <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username", required: true %>
          </div>
          <div class="col-md-5 col-sm-5">
               <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password", required: true %>
          </div>
            <div class="col-md-2 col-sm-2">
                <button type="submit" class="btn btn-info btn-cons" id="login_toggle">Login</button>
            </div>
        </div>
    <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
      <div class="control-group  col-md-10">
        <div class="checkbox checkbox check-success"> <a href="#">Trouble login in?</a>&nbsp;&nbsp;
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end -%>
        </div>
      </div>
      </div>
<% end %>