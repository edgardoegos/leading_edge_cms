<div class="page-content">
    
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <div id="portlet-config" class="modal hide">
      <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button"></button>
        <h3>Widget Settings</h3>
      </div>
      <div class="modal-body"> Widget settings form goes here </div>
    </div>
    <div class="clearfix"></div>
    <div class="content">
        <div class="col-md-8 mp0i">
          <ul class="breadcrumb">
              <li><p>Settings</p></li>
            <li><a class="active">User Management</a></li>
          </ul>
          <div class="page-title"> <i class="fa fa-th-list"></i>
            <h3>All <span class="semi-bold">Users</span></h3>
          </div>  
        </div>
        <div class="col-md-4 mp0i">
            <a href="<%= new_pw_settings_user_management_path %>" class="btn btn-info pull-right" style="margin: 30px 0 0 0;"><i class="fa fa-plus"></i> Create User</a>
        </div>
        
        
        
      <div class="row-fluid">
        <div class="span12">
          <div class="grid simple ">

            <div class="grid-body ">
             <table class="table table-striped" id="example2" >
                <thead>
                  <tr>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% @users.each_with_index do |user, index| %>
                        <tr id="tr-user-<%= index %>" class="odd gradeX" data-user="<%= user.to_json %>">
                            <td><%= user.email %></td>
                            <td><%= user.username %></td>
                            <td><%= user.first_name.titlecase %> <%= user.last_name.titlecase %></td>
                            <td><%= user.role.humanize.titlecase %></td>
                            <td class="center">
                                <a href="<%= edit_pw_settings_user_management_path(user.id) %>" type="button" class="btn btn-white btn-xs btn-mini"><i class="fa fa-pencil-square-o"></i></a>
                                <a type="button" class="btn btn-danger btn-xs btn-mini btn-delete" data-user="<%= user.to_json %>"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- Modal -->
<div class="modal fade" id="mdl-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <br>
              <i class="fa fa-trash-o fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Warning: You are about to delete a user.</h4>
              <p class="no-margin">This request is irreversible. Are you sure you want to delete <span id="spn-name" class="semi-bold"></span> permanently?</p>
              <br>
            </div>
            <div class="modal-footer">
                <%= form_tag({}, {:method => :delete, :id => "frm-delete"}) do %>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                <% end %>
            </div>
        </div>
      <!-- /.modal-content -->
    </div>
<!-- /.modal-dialog -->
</div>
<!-- /.modal -->
