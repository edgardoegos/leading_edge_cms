<div class="page-content">
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <div id="portlet-config" class="modal hide">
      <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button"></button>
        <h3>Widget Settings</h3>
      </div>
      <div class="modal-body"> Widget settings form goes here </div>
    </div>
    <div class="clearfix"></div>
    <div class="content">
      <ul class="breadcrumb">
          <li><p>Settings</p></li>
        <li><a href="#">User Management</a></li>
        <li><a href="#" class="active">Edit User</a></li>
      </ul>
      <div class="page-title"> <i class="icon-custom-left"></i>
        <h3>Edit <span class="semi-bold">User</span></h3>
      </div>  
      <div class="row">
        <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
              
            </div>
            <div class="grid-body no-border">
                <%= form_for @user, url: { action: "update" }, :html => { :multipart => true, :class => "form-no-horizontal-spacing", :id => "form-condensed" } do |f| %>
                    <%= render partial: partials[:form][:user], :locals => { :f => f, :title => "New User" } %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
