
<div class="page-content">
    <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
    <div id="portlet-config" class="modal hide">
      <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button"></button>
        <h3>Widget Settings</h3>
      </div>
      <div class="modal-body"> Widget settings form goes here </div>
    </div>
    <div class="clearfix"></div>
    <div class="content">
        <div class="col-md-8 mp0i">
          <ul class="breadcrumb">
              <li><p>Settings</p></li>
            <li><a class="active">General</a></li>
          </ul>
          <div class="page-title"> <i class="fa fa-th-list"></i>
            <h3><span class="semi-bold">General</span></h3>
          </div>  
        </div>
        <div class="col-md-4 mp0i">
            
        </div>
        
       
        
        <div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-title no-border">
                  
                  <div class="tools"> </div>
                </div>
                <div class="grid-body no-border"> 
                    
                <div class="ibox-content">
                    <h4>Company <span class="semi-bold">Logo</span></h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="image-crop">
                                <% if !@setting.image.present? %>
                                    <img src="<%= image_path('assets/img/empty-state-grid.png') %>">
                                <% else %>
                                    <img src="<%= @setting.image.url(:original) %>">

                                <% end %>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4>Preview image</h4>
                            <div class="col-md-12 mp0i">
                                <div class="img-preview img-preview-sm"></div>
                                <p>Recomended photo size: 446 × 102</p>
                            </div>
                            <div class="col-md-12 mp0i">
                                <%= form_for @setting, url: { action: "update" }, :html => { :multipart => true, :class => "", :id => "frm-company-logo" } do |f| %>
                                    <%= f.hidden_field :image, class: "hide" %>
                                    <label title="Upload image file" for="inputImage" class="btn btn-white ">
                                        <input type="file" class="hide" id="inputImage" accept="image/*">
                                        <i class="fa fa-cloud-upload" aria-hidden="true"></i> Upload your photo
                                    </label>
                                    <button type="button" id="btn-crop" class="btn btn-info">Set as company logo</button>
                                <% end %>
                            </div>
                            <div class="col-md-12 mp0i">
                                <h4>Crop Tools</h4>
                                <div class="dv-btn-command-container">
                                    <div class="btn-group">
                                        <button class="btn btn-white btn-sm btn-small" id="zoomIn" type="button"><i class="fa fa-search-plus" aria-hidden="true"></i></button>
                                        <button class="btn btn-white btn-sm btn-small" id="zoomOut" type="button"><i class="fa fa-search-minus" aria-hidden="true"></i></button>
                                        <button class="btn btn-white btn-sm btn-small" id="rotateRight" type="button"><i class="fa fa-undo"></i></button>
                                        <button class="btn btn-white btn-sm btn-small" id="rotateLeft" type="button"><i class="fa fa-repeat"></i></button>
                                        <button class="btn btn-white btn-sm btn-small" id="btn-reload" type="button"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
              </div>
            </div>
          </div>
        
        <div class="row">
            <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
                
              <div class="tools"> </div>
            </div>
            <div class="grid-body no-border">
                
            <h4>Company <span class="semi-bold">Information</span></h4>   
            <%= form_for @setting, url: { action: "update" }, :html => { :multipart => true, :class => "form-no-horizontal-spacing", :id => "frm-company-settings" } do |f| %>
              <div class="row column-seperation">
                <div class="col-md-6">    
                    <div class="row form-row">
                      <div class="col-md-12">
                          <div class="form-group">
                                <label class="form-label">Company Name</label>
                                <div class="controls">
                                    <%= text_field_tag "setting[body][pw_app_name]", @setting.body["pw_app_name"], :class => "form-control" %>
                                </div>
                          </div>
                      </div>
                    </div>
                    <div class="row form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">Company Tagline</label>
                                <div class="controls">
                                    <%= text_field_tag "setting[body][pw_app_tagline]", @setting.body["pw_app_tagline"], :class => "form-control" %>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="col-md-6">
				
                    <div class="row form-row">
                      <div class="col-md-12">
                          <div class="form-group">
                                <label class="form-label">Company Email</label>
                                <div class="controls">
                                    <%= text_field_tag "setting[body][pw_admin_email]", @setting.body["pw_admin_email"], :class => "form-control" %>
                                </div>
                          </div>
                      </div>
                    </div>
                    
                    <div class="row form-row">
                      <div class="col-md-12">
                        <div class="form-group">
                                <label class="form-label">Company Description</label>
                                <div class="controls">
                                    <%= text_field_tag "setting[body][pw_app_description]", @setting.body["pw_app_description"], :class => "form-control" %>
                                </div>
                          </div>
                      </div>
                    </div>
             
                </div>
              </div>
				<div class="form-actions">
					<div class="pull-left">
					 
					</div>
					<div class="pull-right">
					  <button class="btn btn-info btn-cons" type="submit"><i class="icon-ok"></i> Update</button>
					  <button class="btn btn-white btn-cons" type="button">Cancel</button>
					</div>
				  </div>
                <% end %>
            </div>
          </div>
        </div>
        </div>
     
    </div>
  </div>
